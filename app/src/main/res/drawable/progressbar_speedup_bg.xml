<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"></corners>
            <solid android:color="@color/grey"></solid>
            <corners
                android:radius="50dp"
                >
            </corners>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"></corners>
                <solid android:color="@color/progress_bg"></solid>
                <gradient android:startColor="@color/bottle_green"
                    android:endColor="@color/img_soft_opaque"
                    android:centerColor="@color/grey"
                    ></gradient>
                <corners
                    android:radius="50dp"
                    >
                </corners>
            </shape>
        </clip>
    </item>
</layer-list>