<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp">
    <TextView
        android:id="@+id/tv_speedup_one"
        android:text="123"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_speedup_two"
        android:text="123"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <azsecuer.androidy.com.azsecuer.activity.speedupdemo.AutomoveProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:max="100"
        android:progress="5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:progressDrawable="@drawable/progressbar_speedup_bg"
        android:id="@+id/progressBar_speedup"
        />
    <TextView
        android:id="@+id/tv_speedup_ramMassage"
        android:gravity="right"
        android:text="@string/mobile_speedup_ram"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_speedup_system"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="onClick"
        android:background="@drawable/mobile_speedup_bt_system_bg"
        android:text="@string/mobile_speedup_system_show"
        android:layout_height="50dp" />
</LinearLayout>