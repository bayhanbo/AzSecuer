<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        style="@style/ListItemDef2"/>
    <TextView
        android:id="@+id/tv_file_sizeContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="90dp"
        android:layout_alignBaseline="@+id/tv_file_folder"
        android:visibility="invisible"
        android:text="001"/>
    <TextView
        android:id="@+id/tv_file_folder"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:text="002"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/tv_file_size_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="90dp"
        android:layout_alignBaseline="@+id/tv_file_folder"
        android:text="正在收索中...请稍等"
        android:visibility="visible"
        />
    <ProgressBar
        android:id="@+id/pb_loading_file"
        style="?android:progressBarStyleInverse"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="345dp"
        android:layout_marginTop="5dp"
        android:indeterminateDrawable="@drawable/loading_rotate"
        android:indeterminateDuration="300"
        android:indeterminateBehavior="repeat"
        android:indeterminateOnly="true"
        android:visibility="visible"/>
</RelativeLayout>