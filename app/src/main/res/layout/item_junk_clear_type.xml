<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <CheckBox
        android:id="@+id/clear_cb_item_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:checked="false" />
    <ImageView
        android:id="@+id/iv_clear_soft_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/clear_cb_item_checked"
        android:src="@drawable/ic_launcher"
        />
    <TextView
        android:id="@+id/tv_clear_soft_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_clear_soft_icon"
        android:text="softname"/>
    <TextView
        android:id="@+id/tv_clear_soft_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:text="200mb"/>
</RelativeLayout>