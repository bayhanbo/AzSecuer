<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bottle_green"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_home_phoneSpeedup"
                style="@style/bt_home_item"
                android:drawableTop="@drawable/icon_rocket"
                android:text="@string/tv_bt_home_phoneSpeedup" />

            <TextView
                android:id="@+id/tv_home_softwareManage"
                style="@style/bt_home_item"
                android:drawableTop="@drawable/icon_softmgr"
                android:text="@string/tv_bt_home_softwareManage" />

            <TextView
                android:id="@+id/tv_home_phoneDetection"
                style="@style/bt_home_item"
                android:drawableTop="@drawable/icon_phonemgr"
                android:text="@string/tv_bt_home_phoneDetection" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_home_numberservice"
                style="@style/bt_home_item"
                android:drawableTop="@drawable/icon_telmgr"
                android:onClick="onClick"
                android:text="@string/tv_bt_home_addressBook" />

            <TextView
                android:id="@+id/tv_home_fileManage"
                style="@style/bt_home_item"
                android:drawableTop="@drawable/icon_filemgr"
                android:text="@string/tv_bt_home_fileManage" />

            <TextView
                android:id="@+id/tv_home_junkClear"
                style="@style/bt_home_item"
                android:drawableTop="@drawable/icon_sdclean"
                android:text="@string/tv_bt_home_junkClear" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>