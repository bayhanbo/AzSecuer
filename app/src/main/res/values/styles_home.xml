<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 按钮的文字信息-->
    <string name="tv_home_text">测试使用</string>
    <string name="tv_home_phoneSteward">手机管家</string>
    <string name="tv_bt_home_about">关于我们</string>
    <string name="tv_bt_home_setting">设置</string>
    <string name="tv_bt_home_phoneSpeedup">手机加速</string>
    <string name="tv_bt_home_softwareManage">软件管理</string>
    <string name="tv_bt_home_phoneDetection">手机检测</string>
    <string name="tv_bt_home_addressBook">通讯大全</string>
    <string name="tv_bt_home_fileManage">文件管理</string>
    <string name="tv_bt_home_junkClear">垃圾清理</string>
    <!-- 主界面的配置信息-->
    <dimen name="height_actionbar">50dp</dimen>
    <dimen name="size_actionbar_title">25sp</dimen>
    <dimen name="width_speed_ball">240dp</dimen>
    <dimen name="height_speed_ball">240dp</dimen>
    <dimen name="padding_home_item">20dp</dimen>
    <dimen name="margin_home_ball">36dp</dimen>
    <dimen name="padding_home_item_draw">8dp</dimen>
    <dimen name="size_home_item_text">14sp</dimen>
    <!-- 主界面 导航栏按钮配置信息 -->
    <style name="iv_actionbar_icon">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- 主界面按钮的信息-->
    <style name="bt_home_item">
        <item name="android:background">@drawable/include_buttons_bg</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:padding">@dimen/padding_home_item</item>
        <item name="android:drawablePadding">@dimen/padding_home_item_draw</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_home_item_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>